<!-- app/views/songs/new.html.erb -->

<h1>New song</h1>

<%= form_for @song do |f| %>
  <%= f.label :artist_name  %>
  <%= f.text_field :artist_name  %>

  <%= f.label :name_song %>
  <%= f.text_field :name_song %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.submit "Create" %>
<% end %>
